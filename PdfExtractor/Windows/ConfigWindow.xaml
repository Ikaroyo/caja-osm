<Window x:Class="PdfExtractor.Windows.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración" Height="300" Width="500" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Configuración de la aplicación" FontWeight="Bold" FontSize="14" Margin="0,0,0,20"/>
        
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Ubicación de guardado:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" x:Name="txtSaveLocation" Height="25" Margin="0,0,10,0"/>
            <Button Grid.Column="2" x:Name="btnBrowse" Content="Examinar..." Width="80" Height="25" Click="BtnBrowse_Click"/>
        </Grid>
        
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="URL de la página web:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Column="1" x:Name="txtWebPageUrl" Height="25"/>
        </Grid>
        
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Mover datos a nueva ubicación:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Grid.Column="1" x:Name="btnMoverDatos" Content="🔄 Mover Datos" Width="100" Height="25" Click="BtnMoverDatos_Click" Background="LightBlue"/>
        </Grid>
        
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnSave" Content="Guardar" Width="80" Height="30" Click="BtnSave_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnCancel" Content="Cancelar" Width="80" Height="30" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
