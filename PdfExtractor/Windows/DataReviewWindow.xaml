<Window x:Class="PdfExtractor.Windows.DataReviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Revisar Datos Extraídos" Height="750" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Revise y corrija los datos extraídos:" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Día:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtDia" Text="{Binding Dia}" Margin="5,0,0,0" Height="25"/>
            
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Fecha:" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="1" Grid.Column="1" x:Name="dpFecha" SelectedDate="{Binding Fecha}" Margin="5,0,0,0" Height="25"/>
            
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Lote:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtLote" Text="{Binding Lote}" Margin="5,0,0,0" Height="25"/>
            
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Usuario:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtUsuario" Text="{Binding Usuario}" Margin="5,0,0,0" Height="25"/>
            
            <TextBlock Grid.Row="4" Grid.Column="0" Text="OSM:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtOSM" Text="{Binding OSM}" Margin="5,0,0,0" Height="25"/>
            
            <TextBlock Grid.Row="5" Grid.Column="0" Text="MUNI:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtMUNI" Text="{Binding MUNI}" Margin="5,0,0,0" Height="25"/>
            
            <TextBlock Grid.Row="6" Grid.Column="0" Text="Crédito:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtCredito" Text="{Binding Credito}" Margin="5,0,0,0" Height="25"/>
            
            <TextBlock Grid.Row="7" Grid.Column="0" Text="Débito:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="7" Grid.Column="1" x:Name="txtDebito" Text="{Binding Debito}" Margin="5,0,0,0" Height="25"/>
            
            <TextBlock Grid.Row="8" Grid.Column="0" Text="Cheque:" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="8" Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,0">
                <TextBox x:Name="txtCheque" Text="{Binding Cheque}" Width="150" Height="25"/>
                <CheckBox x:Name="chkIngresarCheque" Content="Ingresar manualmente" VerticalAlignment="Center" Margin="10,0,0,0" Checked="ChkIngresarCheque_Checked"/>
            </StackPanel>
            
            <TextBlock Grid.Row="9" Grid.Column="0" Text="Créd + Déb:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox Grid.Row="9" Grid.Column="1" x:Name="txtCreditoDebito" Text="{Binding CreditoDebitoFormatted, Mode=OneWay}" Margin="5,0,0,0" Height="25" IsReadOnly="True" Background="LightYellow"/>
            
            <TextBlock Grid.Row="10" Grid.Column="0" Text="Efectivo:" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox Grid.Row="10" Grid.Column="1" x:Name="txtEfectivo" Text="{Binding EfectivoFormatted, Mode=OneWay}" Margin="5,0,0,0" Height="25" IsReadOnly="True" Background="LightGray"/>
        </Grid>
        
        <GroupBox Grid.Row="2" Header="Observaciones" Margin="0,15,0,0" Height="100">
            <TextBox x:Name="txtObservaciones" Text="{Binding Observaciones, UpdateSourceTrigger=PropertyChanged}" 
                     TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                     Margin="5" Background="White"/>
        </GroupBox>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,15,0,0">
            <CheckBox x:Name="chkCaja2" Content="CAJA 2" FontWeight="Bold" FontSize="12" Checked="ChkCaja_Changed" Unchecked="ChkCaja_Changed"/>
            <TextBlock Text="(por defecto CAJA 1)" FontStyle="Italic" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>
        
        <TextBlock Grid.Row="4" Text="* El efectivo se calcula automáticamente: OSM - Crédito - Débito - Cheque" 
                   FontStyle="Italic" Foreground="Gray" Margin="0,15,0,0"/>
        
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="btnGuardar" Content="Guardar" Width="100" Height="30" Click="BtnGuardar_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Width="80" Height="30" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
